<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bylaw_textview"
        android:text="You should not"
        android:textColor="#fff"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:layout_width="@dimen/intent_icons_size"
            android:layout_height="@dimen/intent_icons_size"
            android:padding="20dp"
            android:id="@+id/penalty_icon"
            android:src="@drawable/ic_gavel_black_48dp"/>

        <ImageView
            android:id="@+id/court_case_icon"
            android:layout_width="@dimen/intent_icons_size"
            android:layout_height="@dimen/intent_icons_size"
            android:padding="20dp"
            android:src="@drawable/court_judge_48"
            />
        <ImageView
            android:layout_width="@dimen/intent_icons_size"
            android:layout_height="@dimen/intent_icons_size"
            android:id="@+id/star_icon"
            android:padding="20dp"
            android:src="@drawable/ic_star_black_48dp"/>
        <ImageView
            android:layout_width="@dimen/intent_icons_size"
            android:layout_height="@dimen/intent_icons_size"
            android:id="@+id/share_icon"
            android:padding="20dp"
            android:src="@drawable/ic_share_black_48dp"/>

    </LinearLayout>
</LinearLayout>